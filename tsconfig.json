{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "lib": ["DOM", "ES2021"],
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",  // ✅ Ensures compiled files go to "dist/"
    "allowJs": true,
    "moduleDetection": "force",
    "noEmit": false  // ❌ REMOVE this line if present!
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}